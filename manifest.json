{
  "manifest_version": 2,

  "name": "Getting started example",
  "description": "This extension allows the user to change the background color of the current page.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "potato"
  },

  "background": {
    "scripts": ["onBeforeRequest.background.js", "editPage.background.js"]
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["onCompleted.contentScript.js"],
    "run_at": "document_start"
  }],

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}